{
	"name": "simple-svelte",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:migrate": "pnpm run-ts ./drizzle/migrate.ts",
		"db:seed": "pnpm run-ts ./drizzle/seed.ts",
		"db:studio": "drizzle-kit studio",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"run-ts": "vite-node --options.transformMode.ssr='/.*/'"
	},
	"dependencies": {
		"@libsql/client": "0.4.0-pre.7",
		"@lucia-auth/adapter-drizzle": "1.0.0-beta.0",
		"@sveltejs/adapter-vercel": "^4.0.5",
		"arctic": "^0.10.4",
		"clsx": "^2.1.0",
		"csv-parse": "^5.5.3",
		"date-fns": "^3.2.0",
		"drizzle-orm": "^0.29.3",
		"lucia": "3.0.0-beta.12",
		"oslo": "^0.24.0",
		"svelte-french-toast": "^1.2.0",
		"sveltekit-superforms": "^1.13.3",
		"tailwind-merge": "^2.2.0",
		"uuid": "^9.0.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@iconify/svelte": "3.1.6",
		"@playwright/test": "1.40.1",
		"@sveltejs/kit": "2.3.3",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "6.19.0",
		"@typescript-eslint/parser": "6.19.0",
		"autoprefixer": "10.4.16",
		"dotenv": "16.3.1",
		"drizzle-kit": "0.20.13",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.35.1",
		"postcss": "8.4.33",
		"prettier": "3.2.2",
		"prettier-plugin-svelte": "3.1.2",
		"svelte": "5.0.0-next.32",
		"svelte-check": "3.6.3",
		"tailwindcss": "3.4.1",
		"tslib": "2.6.2",
		"tsx": "4.7.0",
		"typescript": "5.3.3",
		"vite": "5.0.11",
		"vite-node": "1.2.0",
		"vitest": "1.2.0"
	}
}
