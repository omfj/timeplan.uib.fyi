{
	"name": "simple-svelte",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --check . && eslint . && tsc --noEmit",
		"format": "prettier --write .",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:migrate": "pnpm run-ts ./drizzle/migrate.ts",
		"db:seed": "pnpm run-ts ./drizzle/seed.ts",
		"db:update-courses": "pnpm run-ts ./drizzle/update-courses.ts",
		"db:studio": "drizzle-kit studio",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"run-ts": "vite-node --options.transformMode.ssr='/.*/'"
	},
	"dependencies": {
		"@libsql/client": "0.6.0",
		"@lucia-auth/adapter-drizzle": "1.0.7",
		"@sveltejs/adapter-vercel": "5.3.0",
		"arctic": "1.8.0",
		"clsx": "2.1.1",
		"csv-parse": "5.5.5",
		"date-fns": "3.6.0",
		"drizzle-orm": "^0.30.9",
		"lucia": "3.2.0",
		"oslo": "1.2.0",
		"svelte-french-toast": "1.2.0",
		"sveltekit-superforms": "2.12.6",
		"tailwind-merge": "2.3.0",
		"uuid": "9.0.1",
		"zod": "3.23.4"
	},
	"devDependencies": {
		"@iconify/svelte": "4.0.1",
		"@playwright/test": "1.43.1",
		"@sveltejs/kit": "2.5.7",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@total-typescript/ts-reset": "0.5.1",
		"@typescript-eslint/eslint-plugin": "7.7.1",
		"@typescript-eslint/parser": "7.7.1",
		"@vite-pwa/sveltekit": "0.4.0",
		"autoprefixer": "10.4.19",
		"dotenv": "16.4.5",
		"drizzle-kit": "0.20.17",
		"eslint": "9.1.1",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.38.0",
		"postcss": "8.4.38",
		"prettier": "3.2.5",
		"prettier-plugin-svelte": "3.2.3",
		"svelte": "5.0.0-next.115",
		"svelte-check": "3.7.0",
		"tailwindcss": "3.4.3",
		"tslib": "2.6.2",
		"tsx": "4.7.3",
		"typescript": "5.4.5",
		"vite": "5.2.10",
		"vite-node": "1.5.2",
		"vite-plugin-pwa": "0.19.8",
		"vitest": "1.5.2"
	}
}
